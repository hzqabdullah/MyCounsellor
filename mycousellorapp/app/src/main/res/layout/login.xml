<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorAccent"
    android:padding="25dp"
    tools:context="com.example.ninashadzrina.mycounsellor.Activity.Login">

    
    <ImageView
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@drawable/logomc"/>

    <EditText
        android:id="@+id/icnumtxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombor Kad Pengenalan"
        android:textAlignment="center"
        android:inputType="text"
        android:padding="15dp"
        android:background="@drawable/edit_box"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/milkyWhite"/>


    <EditText
        android:id="@+id/passwordtxt"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kata Laluan"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:padding="15dp"
        android:background="@drawable/edit_box"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/milkyWhite"/>


    <Button
        android:onClick="btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_box"
        android:layout_marginTop="10dp"
        android:text="Log Masuk"
        android:textColor="@color/colorAccent"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Notis: Pelajar mesti didaftarkan oleh guru kaunselor untuk log masuk ke dalam sistem."
            android:textAlignment="center"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
    

</LinearLayout>





    